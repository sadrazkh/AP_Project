<Window x:Class="AP_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Signin="clr-namespace:AP_Project.Front_End.Pages"
        xmlns:local="clr-namespace:AP_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="665" Width="1120" ResizeMode="NoResize">

    <Grid x:Name="total" Width="1120" Margin="0">
        <StackPanel x:Name="head"  Width="1120" Height="60" Margin="0,0,0,576">
            <Grid Margin="0">
                <Button x:Name="Signoutbtn" Content="Sign out"   Margin="96,12,869,16" Click="Button_Click" Background="#FF1CCB0B" Visibility="Hidden"/>
                <Button x:Name="Profilebtn" Content="Profile"   Margin="220,12,800,16" Click="Button_Click" Background="#FF1CCB0B" Visibility="Hidden"/>
                <Button x:Name="Signinbtn" Content="Sign in / Sign up"   Margin="96,12,869,16" Click="Button_Click" Background="#FF1CCB0B"/>
                <Label Content="Marsana" Grid.Row="0" FontSize="36" FontWeight="Bold" FontStyle="Italic" Margin="956,1,22,5" FontFamily="Impact" Foreground="DarkRed" />
            </Grid>
        </StackPanel>
        <StackPanel x:Name="body" Width="1120" Margin="0,60,0,0"/>
    </Grid>



</Window>




